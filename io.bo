module io

extern getwchar() char;
extern putwchar(c char);

fn getStrLn() {char} {
    let str = {char}();

    while true {
        switch getwchar() {
            '\0': return str;
            '\n': return str;
            c   : str = append(str, c);
        }
    }
}

fn putStrLn(str {char}) {
    let i = 0;

    while i < len(str) {
        putwchar(str[i]);
        i = i + 1;
    }

    putchar('\n');
}
