module io

extern getchar() char;
extern putchar(c char);

fn getStrLn() {char} {
    let str = ({char})();
    let loop = true;

    while loop {
        switch getchar() {
            '\n': loop = false;
            c   : str  = append(str, c);
        }
    }

    return str;
}

fn putStrLn(str {char}) {
    let i = 0;

    while true {
        if i >= len(str) {
            putchar('\n');
            return;
        }

        putchar(str[i]);
        i = i + 1;
    }
}
