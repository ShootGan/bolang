module io

extern getchar() char
extern putchar(c char)


type String = {:char}

fn getChar() char
    return getchar()


fn getStrLn() String
	let str = String()

	while true
		switch getchar()
		  '\n' : return str
		  c    : str = append(str, c)


fn putStrLn(str String)
	let i = 0

	while i < len(str)
			putchar(str[i])
			i = i + 1
	
	putchar('\n') 

