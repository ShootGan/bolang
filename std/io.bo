module io

import strings

extern getchar() i32
extern putchar(c char)

fn getChar() char
    return char(getchar())


fn getStrLn() string
    let str = ""

    while true
        switch char(getchar())
            c | c < char(1); return "\0"
            '\n'           ; return str
            c              ; str <- c


fn putStrLn(str string)
    for [i] str 
        putchar(str[i])

    putchar('\n') 

