module io

imports strings

extern getchar() char
extern putchar(c char)

fn getChar() char
    return getchar()


fn getStrLn() string
	let str = ""

	while true
		switch getchar()
		  '\0' ; return str
		  '\n' ; return str
		  c    ; str = append(str, c)


fn putStrLn(str string)
	let i = 0

	while i < len(str)
			putchar(str[i])
			i = i + 1
	
	putchar('\n') 

